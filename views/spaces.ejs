<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Available <%= title %></h1>
  </br>
    <% spaces.forEach(function(space) { %>
    <h2><%= space.name %> </h2>
    <h3><%= space.description %> </h3>
    <h4>Price per night: <%= space.price_per_night %> pounds</h4>
    <form>
      <button type="submit" formmethod="get" formaction='/spaces/<%= space.id %>'>View a space</button>
    </form>
    <% }); %>
  <form>
    <button type="submit" formmethod="get" formaction='/spaces'>Add a space</button>
  </form>
  </body>
</html>
